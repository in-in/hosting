mixin domain-slide(items)
    each item in items
        .domain-slide
            .domain-slide--img
                img(src='img/#{item.img}', alt='image')
            .domain-slide--charges
                table.charges-table
                    tbody
                        tr
                            - for(i = 0; i < item.zone1.length; i++)
                                td
                                    p.charges-table--domain .#{item.zone1[i]}
                                    .charges-table--price
                                        span.dollar-sign $
                                        span #{item.price1[i]}
                        tr
                            - for(i = 0; i < item.zone2.length; i++)
                                td
                                    p.charges-table--domain .#{item.zone2[i]}
                                    .charges-table--price
                                        span.dollar-sign $
                                        span #{item.price2[i]}


