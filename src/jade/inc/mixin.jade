//- Title Block
mixin title-block(items)
    .title-block
        each item in items
            if item.icon
                svg.title-block--icon
                    use(xlink:href="#icon-#{item.icon}")
            else
                .title-block--underscore
            span(class=item.highClass).heading-high= item.high
            h2(class=item.lowClass).heading-low= item.low
